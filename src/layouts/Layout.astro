---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

const organizationSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "BizSecurity",
  "url": "https://bizsecurity.io",
  "logo": "https://bizsecurity.io/logo.png",
  "sameAs": [
    "https://twitter.com/bizsecurity",
    "https://www.facebook.com/bizsecurity",
    "https://www.linkedin.com/company/bizsecurity"
  ]
});
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={Astro.props.metaDescription || "BizSecurity - Protecting Your Small Business with Expert Cybersecurity Solutions and Community Support"} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 128 128'><path d='M64 8L16 32v32c0 35.3 29.8 64 48 72 18.2-8 48-36.7 48-72V32L64 8zm32 56c0 26.5-21.5 48-32 54.3C53.5 112 32 90.5 32 64V38.4L64 20.8l32 17.6V64z'/><path d='M64 88c13.3 0 24-10.7 24-24S77.3 40 64 40s-24 10.7-24 24 10.7 24 24 24zm0-40c8.8 0 16 7.2 16 16s-7.2 16-16 16-16-7.2-16-16 7.2-16 16-16z'/><style>path{fill:%234a90e2}@media (prefers-color-scheme:dark){path{fill:%23FFF}}</style></svg>" type="image/svg+xml">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="msapplication-TileColor" content="#4a90e2">
		<meta name="theme-color" content="#4a90e2">
		<meta property="og:image" content="/og-image.png">
		<meta property="og:title" content={`${title} | BizSecurity`}>
		<meta property="og:description" content={Astro.props.metaDescription || "BizSecurity - Protecting Your Small Business with Expert Cybersecurity Solutions and Community Support"}>
		<meta property="og:type" content="website">
		<meta property="og:url" content={new URL(Astro.url.pathname, Astro.site).href}>
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site).href} />
		<title>{title} | BizSecurity</title>
		<script type="application/ld+json" set:html={organizationSchema}></script>
		{Astro.props.jsonLd && <script type="application/ld+json" set:html={JSON.stringify(Astro.props.jsonLd)}></script>}
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Metrophobic&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 10, 111, 194;
		--accent-light: 51, 153, 255;
		--accent-dark: 8, 89, 156;
		--text-primary: 51, 51, 51;
		--text-secondary: 119, 119, 119;
		--background: 245, 245, 245;
		--card-background: 255, 255, 255;
	}
	html {
		font-family: 'Poppins', sans-serif;
		background: rgb(var(--background));
		color: rgb(var(--text-primary));
		font-size: 16px;
	}
	body {
		font-family: 'Metrophobic', sans-serif;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Poppins', sans-serif;
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
	}
	@media (max-width: 768px) {
		html {
			font-size: 14px;
		}
	}
		min-height: 100vh;
	}
	main {
		flex: 1;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		box-sizing: border-box;
	}
</style>
