---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="pillar-page">
    <header>
      <h1>{frontmatter.title}</h1>
      {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title} class="pillar-image" />}
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .pillar-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2.5rem;
    color: rgb(var(--accent));
  }
  .pillar-image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
    margin-top: 1rem;
  }
  .content {
    line-height: 1.6;
  }
</style>