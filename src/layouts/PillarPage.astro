---
import Layout from './Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const { frontmatter, faq } = Astro.props;

const faqSchema = faq ? JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faq.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
}) : null;
---

<Layout title={frontmatter.title} jsonLd={faqSchema}>
  <Breadcrumb path={Astro.url.pathname} />
  <article class="pillar-page">
    <header>
      <h1>{frontmatter.title}</h1>
      {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title} class="pillar-image" />}
    </header>
    <div class="content">
      <slot />
    </div>
    {faq && (
      <section class="faq">
        <h2>Frequently Asked Questions</h2>
        {faq.map(item => (
          <div class="faq-item">
            <h3>{item.question}</h3>
            <p>{item.answer}</p>
          </div>
        ))}
      </section>
    )}
  </article>
</Layout>

<style>
  .pillar-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2.5rem;
    color: rgb(var(--accent));
  }
  .pillar-image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
    margin-top: 1rem;
  }
  .content {
    line-height: 1.6;
  }
</style>
