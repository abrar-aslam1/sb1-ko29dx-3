---
import Layout from './Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Breadcrumb path={Astro.url.pathname} />
  <article class="sub-pillar-page">
    <header>
      <h1>{frontmatter.title}</h1>
      {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title} class="sub-pillar-image" />}
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .sub-pillar-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2.25rem;
    color: rgb(var(--accent));
  }
  .sub-pillar-image {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
    border-radius: 8px;
    margin-top: 1rem;
  }
  .content {
    line-height: 1.6;
  }
</style>
