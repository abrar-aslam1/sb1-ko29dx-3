---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const featuredPosts = [
	{ title: "5 Essential Cybersecurity Tips for Small Businesses", url: "/blog/5-essential-cybersecurity-tips" },
	{ title: "The Importance of Employee Training in Security", url: "/blog/importance-of-employee-training" },
	{ title: "How to Create a Disaster Recovery Plan", url: "/blog/create-disaster-recovery-plan" },
];

const securityPillars = [
	{ title: "Network Security", url: "/pillars/network-security", icon: "üåê" },
	{ title: "Data Protection", url: "/pillars/data-protection", icon: "üîí" },
	{ title: "Employee Security Awareness", url: "/pillars/employee-security-awareness", icon: "üë•" },
	{ title: "Physical Security", url: "/pillars/physical-security", icon: "üè¢" },
];

const communityBenefits = [
	{ title: "Expert Insights", description: "Access to industry experts", icon: "fas fa-brain" },
	{ title: "Peer Support", description: "Connect with other businesses", icon: "fas fa-users" },
	{ title: "Resource Library", description: "Comprehensive security guides", icon: "fas fa-book-open" },
	{ title: "Threat Alerts", description: "Stay informed about threats", icon: "fas fa-exclamation-triangle" },
];

const whyJoinReasons = [
	{ title: "Knowledge Sharing", description: "Exchange ideas and best practices with peers", icon: "fas fa-lightbulb" },
	{ title: "Expert Guidance", description: "Get advice from seasoned security professionals", icon: "fas fa-user-shield" },
	{ title: "Stay Ahead", description: "Keep up with the latest security trends and threats", icon: "fas fa-chart-line" },
	{ title: "Community Support", description: "Connect with others facing similar challenges", icon: "fas fa-hands-helping" },
];
---

<Layout title="Protecting Your Small Business">
	<main>
		<section class="hero">
			<div class="container hero-container">
				<div class="hero-content">
					<h1>Secure Your <span class="highlight">Business</span></h1>
					<p class="subtitle">Join our community of protected small businesses</p>
					<div class="cta-container">
						<a href="/contact" class="cta-button primary">Join BizSecurity</a>
						<a href="/about" class="cta-button secondary">Learn More</a>
					</div>
				</div>
				<div class="hero-graphic">
					<div class="circle"></div>
					<div class="shield">
						<i class="fas fa-shield-alt"></i>
					</div>
				</div>
			</div>
		</section>

		<section class="featured-posts">
			<div class="container">
				<h2 class="section-title">Latest Security Insights</h2>
				<div class="insights-grid">
					{featuredPosts.map(post => (
						<a href={post.url} class="insight-card">
							<h3>{post.title}</h3>
							<p>Discover strategies to protect your business</p>
							<span class="read-more">Read Article</span>
						</a>
					))}
				</div>
			</div>
		</section>

		<section class="security-pillars">
			<div class="container">
				<h2 class="section-title">Core Security Pillars</h2>
				<div class="pillar-grid">
					{securityPillars.map(pillar => (
						<a href={pillar.url} class="pillar-card">
							<div class="pillar-icon">{pillar.icon}</div>
							<h3>{pillar.title}</h3>
							<span class="pillar-link">Learn More</span>
						</a>
					))}
				</div>
			</div>
		</section>

		<section class="why-join">
			<div class="container">
				<h2 class="section-title">Why Join BizSecurity?</h2>
				<div class="reasons-grid">
					{whyJoinReasons.map(reason => (
						<div class="reason-card">
							<i class={reason.icon}></i>
							<h3>{reason.title}</h3>
							<p>{reason.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="community-benefits">
			<div class="container">
				<h2 class="section-title">Community Benefits</h2>
				<div class="benefits-grid">
					{communityBenefits.map(benefit => (
						<div class="benefit-card">
							<i class={benefit.icon}></i>
							<h3>{benefit.title}</h3>
							<p>{benefit.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="cta-section">
			<div class="container">
				<div class="cta-content">
					<h2>Ready to Secure Your Business?</h2>
					<p>Join BizSecurity today and take the first step towards comprehensive cybersecurity.</p>
					<a href="/contact" class="cta-button">Get Started</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	:root {
		--primary-color: #2c3e50;
		--secondary-color: #3498db;
		--accent-color: #e74c3c;
		--text-color: #333;
		--background-light: #ecf0f1;
		--card-background: #ffffff;
		--section-spacing: 5rem;
	}
	
	body {
		font-family: 'Roboto', sans-serif;
		line-height: 1.6;
		color: var(--text-color);
		background-color: var(--background-light);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
		color: white;
		padding: 6rem 0;
		overflow: hidden;
		position: relative;
	}

	.hero-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.hero-content {
		flex: 1;
		text-align: left;
	}

	.hero h1 {
		font-size: 4rem;
		margin-bottom: 1rem;
		font-weight: 700;
		line-height: 1.2;
	}

	.highlight {
		color: var(--accent-color);
	}

	.subtitle {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.cta-container {
		display: flex;
		gap: 1rem;
	}

	.hero-graphic {
		flex: 1;
		position: relative;
		height: 400px;
	}

	.circle {
		width: 350px;
		height: 350px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	.shield {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		font-size: 8rem;
		color: var(--accent-color);
	}

	@media (max-width: 768px) {
		.hero-container {
			flex-direction: column;
		}

		.hero-content {
			text-align: center;
			margin-bottom: 2rem;
		}

		.hero h1 {
			font-size: 3rem;
		}

		.hero-graphic {
			height: 300px;
		}

		.circle {
			width: 250px;
			height: 250px;
		}

		.shield {
			font-size: 6rem;
		}
	}

	.section-title {
		font-size: 2.5rem;
		margin-bottom: 3rem;
		text-align: center;
		color: var(--primary-color);
	}

	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: bold;
		font-size: 1rem;
		transition: all 0.3s ease;
	}

	.cta-button.primary {
		background-color: var(--accent-color);
		color: white;
	}

	.cta-button.secondary {
		background-color: transparent;
		color: white;
		border: 2px solid white;
	}

	.cta-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 12px rgba(0,0,0,0.15);
	}

	.featured-posts, .security-pillars, .why-join, .community-benefits {
		padding: var(--section-spacing) 0;
		background-color: white;
	}

	.insights-grid, .pillar-grid, .reasons-grid, .benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.insight-card, .pillar-card, .reason-card, .benefit-card {
		background-color: var(--card-background);
		border-radius: 10px;
		padding: 2rem;
		text-decoration: none;
		color: var(--text-color);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}

	.insight-card:hover, .pillar-card:hover, .reason-card:hover, .benefit-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.2);
	}

	.insight-card h3, .pillar-card h3, .reason-card h3, .benefit-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--primary-color);
	}

	.read-more, .pillar-link {
		color: var(--secondary-color);
		font-weight: bold;
		margin-top: 1rem;
		display: inline-block;
	}

	.pillar-icon, .reason-card i, .benefit-card i {
		font-size: 2.5rem;
		color: var(--secondary-color);
		margin-bottom: 1rem;
	}

	.cta-section {
		background-color: var(--primary-color);
		color: white;
		text-align: center;
		padding: 6rem 0;
	}

	.cta-section h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.cta-section p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.section-title {
			font-size: 2rem;
		}

		.cta-button {
			padding: 0.8rem 1.5rem;
			font-size: 0.9rem;
		}

		.featured-posts, .security-pillars, .why-join, .community-benefits {
			padding: 3rem 0;
		}
	}
</style>
