---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const featuredPosts = [
	{ title: "5 Essential Cybersecurity Tips for Small Businesses", url: "/blog/5-essential-cybersecurity-tips", excerpt: "Discover key strategies to protect your small business from cyber threats." },
	{ title: "The Importance of Employee Training in Security", url: "/blog/importance-of-employee-training", excerpt: "Learn why employee training is crucial for maintaining a strong security posture." },
	{ title: "How to Create a Disaster Recovery Plan", url: "/blog/create-disaster-recovery-plan", excerpt: "Prepare your business for potential cyber incidents with a solid disaster recovery plan." },
];

const securityPillars = [
	{ title: "Network Security", url: "/pillars/network-security", icon: "üåê", description: "Protect your business network from unauthorized access and cyber attacks." },
	{ title: "Data Protection", url: "/pillars/data-protection", icon: "üîí", description: "Safeguard your sensitive business data from breaches and theft." },
	{ title: "Employee Security Awareness", url: "/pillars/employee-security-awareness", icon: "üë•", description: "Educate your team on best practices for maintaining a secure work environment." },
	{ title: "Physical Security", url: "/pillars/physical-security", icon: "üè¢", description: "Ensure the physical safety of your business assets and premises." },
];

const communityBenefits = [
	{ title: "Expert Insights", description: "Access to industry experts", icon: "fas fa-brain" },
	{ title: "Peer Support", description: "Connect with other businesses", icon: "fas fa-users" },
	{ title: "Resource Library", description: "Comprehensive security guides", icon: "fas fa-book-open" },
	{ title: "Threat Alerts", description: "Stay informed about threats", icon: "fas fa-exclamation-triangle" },
];

const whyJoinReasons = [
	{ title: "Knowledge Sharing", description: "Exchange ideas and best practices with peers", icon: "fas fa-lightbulb" },
	{ title: "Expert Guidance", description: "Get advice from seasoned security professionals", icon: "fas fa-user-shield" },
	{ title: "Stay Ahead", description: "Keep up with the latest security trends and threats", icon: "fas fa-chart-line" },
	{ title: "Community Support", description: "Connect with others facing similar challenges", icon: "fas fa-hands-helping" },
];

const faqItems = [
	{ question: "What are the biggest cybersecurity threats for small businesses?", answer: "The most common threats include phishing attacks, ransomware, data breaches, and insider threats. Our community helps you stay informed and protected against these evolving risks." },
	{ question: "How can I protect my business on a limited budget?", answer: "We offer cost-effective solutions and guidance on prioritizing security measures. Our community also shares tips on maximizing security with limited resources." },
	{ question: "What should I do if my business experiences a cyber attack?", answer: "Our incident response resources and expert community can guide you through the steps to mitigate damage, recover data, and prevent future attacks." },
];

const metaDescription = "BizSecurity offers comprehensive cybersecurity solutions for small businesses. Join our community to protect your business from digital threats.";
---

<Layout title="Protecting Your Small Business | BizSecurity" metaDescription={metaDescription}>
	<main>
		<section class="hero">
			<div class="container hero-container">
				<div class="hero-content">
					<h1>Secure Your <span class="highlight">Business</span> in the Digital Age</h1>
					<p class="subtitle">Join our community of protected small businesses</p>
					<p class="hero-description">BizSecurity provides comprehensive cybersecurity solutions tailored for small businesses. Our expert-led community helps you navigate the complex world of digital security, ensuring your business stays protected against evolving cyber threats.</p>
					<div class="cta-container">
						<a href="/contact" class="cta-button primary">Join BizSecurity</a>
						<a href="/about" class="cta-button secondary">Learn More</a>
					</div>
				</div>
				<div class="hero-graphic">
					<div class="circle"></div>
					<div class="shield">
						<i class="fas fa-shield-alt"></i>
					</div>
				</div>
			</div>
		</section>

		<section class="about-us">
			<div class="container">
				<h2 class="section-title">Our Mission</h2>
				<p>At BizSecurity, we're committed to empowering small businesses with enterprise-level cybersecurity solutions. Our mission is to create a safer digital environment for all businesses, regardless of their size or resources.</p>
			</div>
		</section>

		<section class="featured-posts">
			<div class="container">
				<h2 class="section-title">Latest Security Insights</h2>
				<div class="insights-grid">
					{featuredPosts.map(post => (
						<a href={post.url} class="insight-card">
							<h3>{post.title}</h3>
							<p>{post.excerpt}</p>
							<span class="read-more">Read Article</span>
						</a>
					))}
				</div>
			</div>
		</section>

		<section class="security-pillars">
			<div class="container">
				<h2 class="section-title">Core Security Pillars</h2>
				<div class="pillar-grid">
					{securityPillars.map(pillar => (
						<a href={pillar.url} class="pillar-card">
							<div class="pillar-icon">{pillar.icon}</div>
							<h3>{pillar.title}</h3>
							<p>{pillar.description}</p>
						</a>
					))}
				</div>
			</div>
		</section>

		<section class="why-join">
			<div class="container">
				<h2 class="section-title">Why Join BizSecurity?</h2>
				<div class="reasons-grid">
					{whyJoinReasons.map(reason => (
						<div class="reason-card">
							<div class="reason-icon">
								<i class={reason.icon}></i>
							</div>
							<div class="reason-content">
								<h3>{reason.title}</h3>
								<p>{reason.description}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="community-benefits">
			<div class="container">
				<h2 class="section-title">Community Benefits</h2>
				<div class="benefits-grid">
					{communityBenefits.map(benefit => (
						<div class="benefit-card">
							<i class={benefit.icon}></i>
							<h3>{benefit.title}</h3>
							<p>{benefit.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="faq">
			<div class="container">
				<h2 class="section-title">Frequently Asked Questions</h2>
				<div class="faq-grid">
					{faqItems.map(item => (
						<div class="faq-item">
							<h3>{item.question}</h3>
							<p>{item.answer}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="cta-section">
			<div class="container">
				<div class="cta-content">
					<h2>Ready to Secure Your Business?</h2>
					<p>Join BizSecurity today and take the first step towards comprehensive cybersecurity.</p>
					<a href="/contact" class="cta-button">Get Started</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	:root {
		--primary-color: #2c3e50;
		--secondary-color: #3498db;
		--accent-color: #e74c3c;
		--text-color: #333;
		--background-light: #ecf0f1;
		--card-background: #ffffff;
		--section-spacing: 5rem;
	}
	
	body {
		font-family: 'Roboto', sans-serif;
		line-height: 1.6;
		color: var(--text-color);
		background-color: var(--background-light);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		background-image: url('/hero-background.jpg');
		background-size: cover;
		background-position: center;
		color: white;
		padding: 6rem 0;
		overflow: hidden;
		position: relative;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(44, 62, 80, 0.9) 0%, rgba(52, 152, 219, 0.9) 100%);
	}

	.hero-container {
		position: relative;
		z-index: 1;
	}

	.hero-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.hero-content {
		flex: 1;
		text-align: left;
	}

	.hero h1 {
		font-size: 4rem;
		margin-bottom: 1rem;
		font-weight: 700;
		line-height: 1.2;
	}

	.highlight {
		color: #ffd700; /* Yellow color */
	}

	.subtitle {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		opacity: 0.9;
	}

	.hero-description {
		font-size: 1.1rem;
		margin-bottom: 2rem;
		max-width: 600px;
	}

	.cta-container {
		display: flex;
		gap: 1rem;
	}

	.hero-graphic {
		flex: 1;
		position: relative;
		height: 400px;
	}

	.circle {
		width: 350px;
		height: 350px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	.shield {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		font-size: 8rem;
		color: white;
	}

	.about-us, .faq {
		padding: var(--section-spacing) 0;
		background-color: var(--background-light);
	}

	.faq-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.faq-item {
		background-color: var(--card-background);
		border-radius: 10px;
		padding: 1.5rem;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}

	.faq-item h3 {
		font-size: 1.2rem;
		margin-bottom: 0.5rem;
		color: var(--primary-color);
	}

	@media (max-width: 768px) {
		.hero {
			padding: 3rem 0;
		}

		.hero-container {
			flex-direction: column-reverse;
		}

		.hero-content {
			text-align: center;
			margin-top: 2rem;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1.2rem;
			margin-bottom: 1rem;
		}

		.hero-description {
			font-size: 1rem;
			margin-bottom: 1.5rem;
		}

		.cta-container {
			flex-direction: column;
			align-items: center;
		}

		.cta-button {
			width: 100%;
			max-width: 250px;
			text-align: center;
		}

		.hero-graphic {
			height: 200px;
		}

		.circle {
			width: 180px;
			height: 180px;
		}

		.shield {
			font-size: 4rem;
		}
	}

	.section-title {
		font-size: 2.5rem;
		margin-bottom: 3rem;
		text-align: center;
		color: var(--primary-color);
	}

	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: bold;
		font-size: 1.1rem;
		transition: all 0.3s ease;
	}

	.cta-button.primary {
		background-color: #ffd700; /* Yellow color */
		color: #2c3e50; /* Dark text for better contrast */
	}

	.cta-button.secondary {
		background-color: transparent;
		color: white;
		border: 2px solid white;
	}

	.cta-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 12px rgba(0,0,0,0.15);
	}

	.cta-section .cta-button {
		background-color: #e74c3c; /* Bright red color */
		color: white;
		font-size: 1.2rem;
		padding: 1.2rem 2.5rem;
		border: none;
	}

	.cta-section .cta-button:hover {
		background-color: #c0392b; /* Darker red on hover */
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.2);
	}

	.featured-posts, .security-pillars, .why-join, .community-benefits {
		padding: var(--section-spacing) 0;
		background-color: white;
	}

	.insights-grid, .benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.pillar-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.reasons-grid {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	@media (min-width: 769px) {
		.reasons-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		}
	}

	.insight-card, .benefit-card {
		background-color: var(--card-background);
		border-radius: 10px;
		padding: 2rem;
		text-decoration: none;
		color: var(--text-color);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}

	.pillar-card {
		background-color: var(--card-background);
		border-radius: 15px;
		padding: 1.5rem;
		text-decoration: none;
		color: var(--text-color);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.reason-card {
		background-color: var(--card-background);
		border-radius: 15px;
		padding: 2rem;
		display: flex;
		align-items: flex-start;
		transition: all 0.3s ease;
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
	}

	.insight-card:hover, .pillar-card:hover, .benefit-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.2);
	}

	.reason-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 30px rgba(0,0,0,0.2);
	}

	.insight-card h3, .benefit-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--primary-color);
	}

	.pillar-card h3 {
		font-size: 1.2rem;
		margin: 1rem 0 0.5rem;
		color: var(--primary-color);
	}

	.pillar-card p {
		font-size: 0.9rem;
		color: var(--text-color);
		opacity: 0.8;
	}

	.read-more, .pillar-link {
		color: var(--secondary-color);
		font-weight: bold;
		margin-top: 1rem;
		display: inline-block;
	}

	.reason-icon {
		background-color: var(--secondary-color);
		color: white;
		width: 60px;
		height: 60px;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-right: 1.5rem;
		flex-shrink: 0;
	}

	.reason-icon i {
		font-size: 1.5rem;
	}

	.reason-content {
		flex-grow: 1;
	}

	.reason-card h3 {
		font-size: 1.3rem;
		margin-bottom: 0.5rem;
		color: var(--primary-color);
	}

	.reason-card p {
		font-size: 1rem;
		color: var(--text-color);
		opacity: 0.8;
	}

	.benefit-card i {
		font-size: 2.5rem;
		color: var(--secondary-color);
		margin-bottom: 1rem;
	}

	@media (max-width: 768px) {
		.reasons-grid {
			grid-template-columns: 1fr;
		}

		.reason-card {
			padding: 1.5rem;
		}

		.reason-icon {
			width: 50px;
			height: 50px;
			margin-right: 1rem;
		}

		.reason-icon i {
			font-size: 1.2rem;
		}

		.reason-card h3 {
			font-size: 1.2rem;
		}

		.reason-card p {
			font-size: 0.9rem;
		}
	}

	.pillar-icon {
		font-size: 3rem;
		color: var(--secondary-color);
		margin-bottom: 0.5rem;
	}

	@media (max-width: 768px) {
		.pillar-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.pillar-card {
			padding: 1rem;
		}

		.pillar-icon {
			font-size: 2.5rem;
		}

		.pillar-card h3 {
			font-size: 1rem;
		}

		.pillar-card p {
			font-size: 0.8rem;
		}
	}

	.cta-section {
		background-color: var(--primary-color);
		color: white;
		text-align: center;
		padding: 6rem 0;
	}

	.cta-section h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.cta-section p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.section-title {
			font-size: 2rem;
		}

		.cta-button {
			padding: 0.8rem 1.5rem;
			font-size: 0.9rem;
		}

		.featured-posts, .security-pillars, .why-join, .community-benefits {
			padding: 3rem 0;
		}
	}
</style>
