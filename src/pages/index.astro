---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const featuredPosts = [
	{ title: "5 Essential Cybersecurity Tips for Small Businesses", url: "/blog/5-essential-cybersecurity-tips" },
	{ title: "The Importance of Employee Training in Security", url: "/blog/importance-of-employee-training" },
	{ title: "How to Create a Disaster Recovery Plan", url: "/blog/create-disaster-recovery-plan" },
];

const securityPillars = [
	{ title: "Network Security", url: "/pillars/network-security", icon: "üåê" },
	{ title: "Data Protection", url: "/pillars/data-protection", icon: "üîí" },
	{ title: "Employee Security Awareness", url: "/pillars/employee-security-awareness", icon: "üë•" },
	{ title: "Physical Security", url: "/pillars/physical-security", icon: "üè¢" },
];

const communityBenefits = [
	{ title: "Expert Insights", description: "Access to industry experts", icon: "fas fa-brain" },
	{ title: "Peer Support", description: "Connect with other businesses", icon: "fas fa-users" },
	{ title: "Resource Library", description: "Comprehensive security guides", icon: "fas fa-book-open" },
	{ title: "Threat Alerts", description: "Stay informed about threats", icon: "fas fa-exclamation-triangle" },
];

const whyJoinReasons = [
	{ title: "Knowledge Sharing", description: "Exchange ideas and best practices with peers", icon: "fas fa-lightbulb" },
	{ title: "Expert Guidance", description: "Get advice from seasoned security professionals", icon: "fas fa-user-shield" },
	{ title: "Stay Ahead", description: "Keep up with the latest security trends and threats", icon: "fas fa-chart-line" },
	{ title: "Community Support", description: "Connect with others facing similar challenges", icon: "fas fa-hands-helping" },
];
---

<Layout title="Protecting Your Small Business">
	<section class="hero">
		<div class="hero-content">
			<h1>Secure Your Business, Join Our Community</h1>
			<p>Empowering small businesses with expert cybersecurity knowledge and support.</p>
			<a href="/contact" class="cta-button">Join BizSecurity Today</a>
		</div>
	</section>

	<section class="featured-posts">
		<h2 class="section-title">Latest Security Insights</h2>
		<div class="card-grid">
			{featuredPosts.map(post => (
				<Card href={post.url} title={post.title} body="Read more about protecting your business" />
			))}
		</div>
	</section>

	<section class="security-pillars">
		<h2 class="section-title">Core Security Pillars</h2>
		<div class="pillar-grid">
			{securityPillars.map(pillar => (
				<div class="pillar-card">
					<div class="pillar-icon">{pillar.icon}</div>
					<h3>{pillar.title}</h3>
					<a href={pillar.url} class="pillar-link">Explore</a>
				</div>
			))}
		</div>
	</section>

	<section class="why-join">
		<h2 class="section-title">Why Join BizSecurity?</h2>
		<div class="why-join-content">
			<div class="why-join-image">
				<img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fHNtYWxsJTIwYnVzaW5lc3MlMjB3b2tyaW5nfGVufDB8fDB8fHww" alt="Business team collaborating" />
			</div>
			<div class="why-join-reasons">
				{whyJoinReasons.map(reason => (
					<div class="reason-card">
						<i class={reason.icon}></i>
						<h3>{reason.title}</h3>
						<p>{reason.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<section class="community-benefits">
		<h2 class="section-title">Benefits of Our Community</h2>
		<div class="benefits-grid">
			{communityBenefits.map(benefit => (
				<div class="benefit-card">
					<i class={benefit.icon}></i>
					<h3>{benefit.title}</h3>
					<p>{benefit.description}</p>
				</div>
			))}
		</div>
	</section>

	<section class="cta-section">
		<div class="cta-content">
			<h2>Ready to Secure Your Business?</h2>
			<p>Join BizSecurity today and take the first step towards comprehensive cybersecurity.</p>
			<a href="/contact" class="cta-button">Get Started</a>
		</div>
	</section>
</Layout>

<style>
	:root {
		--accent-color: #4a90e2;
		--accent-dark: #3a7bd5;
		--text-color: #333;
		--background-light: #f0f4f8;
		--card-background: #ffffff;
		--section-spacing: 6rem;
	}
	
	body {
		font-family: 'Arial', sans-serif;
		line-height: 1.6;
		color: var(--text-color);
		background-color: #e6edf5;
	}

	.hero {
		background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/39/lIZrwvbeRuuzqOoWJUEn_Photoaday_CSD%20%281%20of%201%29-5.jpg?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTV8fHNtYWxsJTIwYnVzaW5lc3MlMjB3b2tyaW5nfGVufDB8fDB8fHww');
		background-size: cover;
		background-position: center;
		color: white;
		padding: 8rem 2rem;
		text-align: center;
		position: relative;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 3.5rem;
		margin-bottom: 1rem;
		text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
	}

	.hero p {
		font-size: 1.5rem;
		margin-bottom: 2rem;
	}

	.section-title {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
		color: var(--accent-color);
	}

	.cta-button {
		display: inline-block;
		background-color: var(--accent-color);
		color: white;
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: bold;
		font-size: 1.2rem;
		transition: background-color 0.3s ease, transform 0.3s ease;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}

	.cta-button:hover {
		background-color: var(--accent-dark);
		transform: translateY(-3px);
	}

	.featured-posts, .security-pillars, .why-join, .community-benefits {
		padding: var(--section-spacing) 2rem;
		background-color: var(--background-light);
	}

	.card-grid, .pillar-grid, .benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.pillar-card, .benefit-card, .reason-card {
		background-color: var(--card-background);
		border-radius: 15px;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.pillar-card:hover, .benefit-card:hover, .reason-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 15px 30px rgba(0,0,0,0.2);
	}

	.pillar-icon, .benefit-card i, .reason-card i {
		font-size: 3rem;
		color: var(--accent-color);
		margin-bottom: 1rem;
	}

	.pillar-link {
		display: inline-block;
		color: var(--accent-color);
		text-decoration: none;
		font-weight: bold;
		margin-top: 1rem;
		transition: color 0.3s ease;
	}

	.pillar-link:hover {
		color: var(--accent-dark);
	}

	.why-join {
		background-color: #d9e6f2;
	}

	.why-join-content {
		display: flex;
		align-items: center;
		gap: 4rem;
	}

	.why-join-image {
		flex: 1;
	}

	.why-join-image img {
		width: 100%;
		border-radius: 15px;
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
	}

	.why-join-reasons {
		flex: 1;
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	.cta-section {
		background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1497215728101-856f4ea42174?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fHNtYWxsJTIwYnVzaW5lc3MlMjB3b2tyaW5nfGVufDB8fDB8fHww');
		background-size: cover;
		background-position: center;
		color: white;
		text-align: center;
		padding: 6rem 2rem;
		position: relative;
	}

	.cta-content {
		position: relative;
		z-index: 2;
	}

	.cta-section h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.cta-section p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}
		.section-title {
			font-size: 2rem;
		}
		.hero {
			padding: 6rem 1rem;
		}
		.why-join-content {
			flex-direction: column;
		}
		.card-grid, .pillar-grid, .benefits-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
