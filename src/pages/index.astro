---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const featuredPosts = [
	{ title: "5 Essential Cybersecurity Tips for Small Businesses", url: "/blog/5-essential-cybersecurity-tips" },
	{ title: "The Importance of Employee Training in Security", url: "/blog/importance-of-employee-training" },
	{ title: "How to Create a Disaster Recovery Plan", url: "/blog/create-disaster-recovery-plan" },
];

const securityPillars = [
	{ title: "Network Security", url: "/pillars/network-security", icon: "üåê" },
	{ title: "Data Protection", url: "/pillars/data-protection", icon: "üîí" },
	{ title: "Employee Security Awareness", url: "/pillars/employee-security-awareness", icon: "üë•" },
	{ title: "Physical Security", url: "/pillars/physical-security", icon: "üè¢" },
];

const communityBenefits = [
	{ title: "Expert Insights", description: "Access to industry experts", icon: "fas fa-brain" },
	{ title: "Peer Support", description: "Connect with other businesses", icon: "fas fa-users" },
	{ title: "Resource Library", description: "Comprehensive security guides", icon: "fas fa-book-open" },
	{ title: "Threat Alerts", description: "Stay informed about threats", icon: "fas fa-exclamation-triangle" },
];

const whyJoinReasons = [
	{ title: "Knowledge Sharing", description: "Exchange ideas and best practices with peers", icon: "fas fa-lightbulb" },
	{ title: "Expert Guidance", description: "Get advice from seasoned security professionals", icon: "fas fa-user-shield" },
	{ title: "Stay Ahead", description: "Keep up with the latest security trends and threats", icon: "fas fa-chart-line" },
	{ title: "Community Support", description: "Connect with others facing similar challenges", icon: "fas fa-hands-helping" },
];
---

<Layout title="Protecting Your Small Business">
	<section class="hero">
		<div class="hero-content">
			<h1>Secure Your Business,<br><span class="highlight">Join Our Community</span></h1>
			<p>Empowering small businesses with expert cybersecurity knowledge and support.</p>
			<div class="cta-container">
				<a href="/contact" class="cta-button primary">Join BizSecurity Today</a>
				<a href="/about" class="cta-button secondary">Learn More</a>
			</div>
		</div>
		<div class="hero-image">
			<img src="/BizSecurity-3.png" alt="BizSecurity Protection" />
		</div>
	</section>

	<section class="featured-posts">
		<h2 class="section-title">Latest Security Insights</h2>
		<div class="insights-grid">
			{featuredPosts.map(post => (
				<a href={post.url} class="insight-card">
					<h3>{post.title}</h3>
					<p>Read more about protecting your business</p>
					<span class="read-more">Read More &rarr;</span>
				</a>
			))}
		</div>
	</section>

	<section class="security-pillars">
		<h2 class="section-title">Core Security Pillars</h2>
		<div class="pillar-grid">
			{securityPillars.map(pillar => (
				<div class="pillar-card">
					<div class="pillar-icon">{pillar.icon}</div>
					<h3>{pillar.title}</h3>
					<a href={pillar.url} class="pillar-link">Explore</a>
				</div>
			))}
		</div>
	</section>

	<section class="why-join">
		<h2 class="section-title">Why Join BizSecurity?</h2>
		<div class="why-join-grid">
			{whyJoinReasons.map(reason => (
				<div class="reason-card">
					<i class={reason.icon}></i>
					<h3>{reason.title}</h3>
					<p>{reason.description}</p>
				</div>
			))}
		</div>
	</section>

	<section class="community-benefits">
		<h2 class="section-title">Benefits of Our Community</h2>
		<div class="benefits-grid">
			{communityBenefits.map(benefit => (
				<div class="benefit-card">
					<i class={benefit.icon}></i>
					<h3>{benefit.title}</h3>
					<p>{benefit.description}</p>
				</div>
			))}
		</div>
	</section>

	<section class="cta-section">
		<div class="cta-content">
			<h2>Ready to Secure Your Business?</h2>
			<p>Join BizSecurity today and take the first step towards comprehensive cybersecurity.</p>
			<a href="/contact" class="cta-button">Get Started</a>
		</div>
	</section>
</Layout>

<style>
	:root {
		--accent-color: #4a90e2;
		--accent-dark: #3a7bd5;
		--text-color: #333;
		--background-light: #f0f4f8;
		--card-background: #ffffff;
		--section-spacing: 6rem;
	}
	
	body {
		font-family: 'Arial', sans-serif;
		line-height: 1.6;
		color: var(--text-color);
		background-color: #e6edf5;
	}

	.hero {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 4rem 2rem;
		background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
		overflow: hidden;
		position: relative;
	}

	.hero-content {
		flex: 1;
		max-width: 600px;
		z-index: 2;
	}

	.hero-image {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		z-index: 1;
	}

	.hero-image img {
		max-width: 100%;
		height: auto;
		filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15));
		animation: float 6s ease-in-out infinite;
	}

	h1 {
		font-size: 3.5rem;
		margin-bottom: 1rem;
		color: var(--text-color);
		line-height: 1.2;
	}

	.highlight {
		color: var(--accent-color);
	}

	.hero p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		color: var(--text-color);
		opacity: 0.8;
	}

	.cta-container {
		display: flex;
		gap: 1rem;
	}

	@keyframes float {
		0% {
			transform: translatey(0px);
		}
		50% {
			transform: translatey(-20px);
		}
		100% {
			transform: translatey(0px);
		}
	}

	.section-title {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
		color: var(--accent-color);
	}

	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: bold;
		font-size: 1rem;
		transition: all 0.3s ease;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}

	.cta-button.primary {
		background-color: var(--accent-color);
		color: white;
	}

	.cta-button.secondary {
		background-color: white;
		color: var(--accent-color);
		border: 2px solid var(--accent-color);
	}

	.cta-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 12px rgba(0,0,0,0.15);
	}

	.cta-button.primary:hover {
		background-color: var(--accent-dark);
	}

	.cta-button.secondary:hover {
		background-color: var(--accent-color);
		color: white;
	}

	.featured-posts, .security-pillars, .why-join, .community-benefits {
		padding: var(--section-spacing) 2rem;
		background-color: var(--background-light);
	}

	.insights-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.insight-card {
		background-color: var(--card-background);
		border-radius: 15px;
		padding: 2rem;
		text-decoration: none;
		color: var(--text-color);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}

	.insight-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.2);
	}

	.insight-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--accent-color);
	}

	.insight-card p {
		font-size: 1rem;
		margin-bottom: 1.5rem;
	}

	.read-more {
		color: var(--accent-color);
		font-weight: bold;
		align-self: flex-start;
		transition: transform 0.3s ease;
	}

	.insight-card:hover .read-more {
		transform: translateX(5px);
	}

	.pillar-grid, .benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.pillar-card, .benefit-card, .reason-card {
		background-color: var(--card-background);
		border-radius: 15px;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.pillar-card:hover, .benefit-card:hover, .reason-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 15px 30px rgba(0,0,0,0.2);
	}

	.pillar-icon, .benefit-card i, .reason-card i {
		font-size: 3rem;
		color: var(--accent-color);
		margin-bottom: 1rem;
	}

	.pillar-link {
		display: inline-block;
		color: var(--accent-color);
		text-decoration: none;
		font-weight: bold;
		margin-top: 1rem;
		transition: color 0.3s ease;
	}

	.pillar-link:hover {
		color: var(--accent-dark);
	}

	.why-join {
		background-color: var(--background-light);
	}

	.why-join-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.cta-section {
		background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1497215728101-856f4ea42174?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fHNtYWxsJTIwYnVzaW5lc3MlMjB3b2tyaW5nfGVufDB8fDB8fHww');
		background-size: cover;
		background-position: center;
		color: white;
		text-align: center;
		padding: 6rem 2rem;
		position: relative;
	}

	.cta-content {
		position: relative;
		z-index: 2;
	}

	.cta-section h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.cta-section p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
	}

	@media (max-width: 768px) {
		.hero {
			flex-direction: column;
			padding: 3rem 1rem;
		}

		.hero-content {
			text-align: center;
			margin-bottom: 2rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.hero p {
			font-size: 1.1rem;
		}

		.cta-container {
			justify-content: center;
		}

		.hero-image {
			order: -1;
			margin-bottom: 2rem;
		}

		.hero-image img {
			max-width: 80%;
		}

		.section-title {
			font-size: 1.8rem;
		}

		.why-join-content {
			flex-direction: column;
		}

		.card-grid, .pillar-grid, .benefits-grid, .why-join-grid {
			grid-template-columns: 1fr;
		}

		.featured-posts, .security-pillars, .why-join, .community-benefits {
			padding: 3rem 1rem;
		}

		.cta-button {
			padding: 0.8rem 1.5rem;
			font-size: 0.9rem;
		}
	}
</style>
