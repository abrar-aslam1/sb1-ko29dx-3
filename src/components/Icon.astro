---
export interface Props {
  name: string;
}

const { name } = Astro.props;

const icons = {
  "shield-check": "/favicon-shield-check.ico",
  "lock-closed": "/favicon-lock-closed.ico",
  "eye": "/favicon-eye.ico",
  "layers": "/favicon-layers.ico",
  "wifi": "/favicon-wifi.ico",
  "question": "/favicon-question.ico",
  "rocket": "/favicon-rocket.ico",
};

const iconPath = icons[name] || "/favicon.ico";
---

<img src={iconPath} alt={name} class="icon" />

<style>
  .icon {
    display: inline-block;
    width: 1.5em;
    height: 1.5em;
    vertical-align: middle;
    margin-right: 0.5em;
  }
</style>
